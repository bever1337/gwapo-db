    {
      "items": { "type": "integer" },
      "type": "array"
    },
    {
      "properties": {
        "icon": { "format": "uri", "minLength": 1, "type": "string" },
        "id": { "type": "integer" },
        "name": { "minLength": 1, "type": "string" },
        "order": { "type": "integer" },
        "unlock_details": { "type": "string" },
        "unlock_items": { "items": { "type": "integer" }, "type": "array" }
